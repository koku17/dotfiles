* {
	background-image: none;
	box-shadow: none;
	background-color: transparent;
  border: none;
	margin: 0;
}

window {
	background: rgba(0,0,0,0.25);
}

button {
	background-size: 50%;
	background-repeat: no-repeat;
	background-position: center;
	color: white;
	border-radius: 0%;
}


button:hover {
    background-color: rgba(255,255,255,0.1);
}

button:focus {
    background-color: rgba(255,255,255,0.2);
}

#lock {
    background-image: image(url("/home/hacker/.config/wlogout/icons/lock.png"));
}

#logout {
    background-image: image(url("/home/hacker/.config/wlogout/icons/logout.png"));
}

#suspend {
    background-image: image(url("/home/hacker/.config/wlogout/icons/suspend.png"));
}

#hibernate {
    background-image: image(url("/home/hacker/.config/wlogout/icons/hibernate.png"));
}

#shutdown {
    background-image: url("/home/hacker/.config/wlogout/icons/shutdown.png");
}

#reboot {
    background-image: image(url("/home/hacker/.config/wlogout/icons/reboot.png"));
}
